<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    app:cardCornerRadius="7dp"
    app:cardBackgroundColor="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/airline_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="VIstara"
            android:textSize="17dp"
            android:textStyle="italic"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/departure"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/arrival"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_marginRight="80dp"
            android:textStyle="bold"
            android:textColor="@color/cardview_dark_background"
            android:text="Departure"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/departure_time"
            app:layout_constraintTop_toBottomOf="@+id/departure"
            app:layout_constraintStart_toStartOf="@+id/departure"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/cardview_dark_background"
            android:text="09:00 PM"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/airport_name"
            app:layout_constraintTop_toBottomOf="@+id/departure_time"
            app:layout_constraintStart_toStartOf="@+id/departure_time"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/cardview_dark_background"
            android:text="Delhi Airport"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/arrival"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="80dp"
            android:text="Arrival"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/arrival_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:00 PM"
            android:textSize="15dp"
            android:textColor="@color/cardview_dark_background"
            app:layout_constraintStart_toStartOf="@id/arrival"
            app:layout_constraintTop_toBottomOf="@id/arrival"/>


        <TextView
            android:id="@+id/arrival_airport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bombay Airport"
            android:textSize="15dp"
            android:textColor="@color/cardview_dark_background"
            app:layout_constraintStart_toStartOf="@id/arrival"
            app:layout_constraintTop_toBottomOf="@id/arrival_time"/>




        <TextView
            android:id="@+id/fare_text"
            app:layout_constraintTop_toBottomOf="@+id/airport_name"
            app:layout_constraintStart_toStartOf="@+id/airline_name"
            android:layout_marginTop="10dp"
            android:text="Fare     :"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/fare_value"
            app:layout_constraintBottom_toBottomOf="@+id/fare_text"
            app:layout_constraintStart_toStartOf="@+id/departure"
            android:text="1100"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/arrow"
            app:layout_constraintTop_toTopOf="@+id/arrival_time"
            app:layout_constraintEnd_toStartOf="@+id/arrival"
            android:layout_marginRight="30dp"
            android:text="--->"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/by"
            app:layout_constraintBottom_toBottomOf="@+id/fare_text"
            app:layout_constraintStart_toStartOf="@+id/arrow"
            android:text="by"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/trip_provider"
            app:layout_constraintBottom_toBottomOf="@+id/fare_text"
            app:layout_constraintStart_toStartOf="@+id/arrival"
            android:text="Make My Trip"
            android:textColor="#000000"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>